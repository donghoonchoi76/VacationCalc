    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
    <AssemblyName>VacationCalculator</AssemblyName>
    <Product>Vacation Calculator</Product>
    <Company>luckylinus</Company>
    <Authors>luckylinus</Authors>
